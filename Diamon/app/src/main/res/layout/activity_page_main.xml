<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vue.PageMainActivity"
    android:fitsSystemWindows="true">
   <!-- tools:openDrawer="start"-->

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/id_nav"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"/>
<LinearLayout
  android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neuwhite"
    android:orientation="vertical"
    android:weightSum="10"
   >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"

>
        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="75dp"
            android:layout_height="wrap_content"

            >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_menu" />

        </soup.neumorphism.NeumorphCardView>




     <!--   <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            >
        <ImageView
            android:id="@+id/notif_cloch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_notification"
           />
        </soup.neumorphism.NeumorphCardView>
        -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_prix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/prix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000.125 XOF"
            android:textStyle="bold" />
    </LinearLayout>
    <!--
        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.ImageView"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:neumorph_shapeType="flat"
            >
           <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:background="#D5DFF3"
                android:id="@+id/graph"/>-->

  <!--  <com.github.mikephil.charting.charts.LineChart-->
        <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/graph"/>
    <!--</soup.neumorphism.NeumorphCardView>-->

    <LinearLayout
        android:id="@+id/sell_buy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

    <soup.neumorphism.NeumorphButton
        style="@style/Widget.Neumorph.Button"
        android:id="@+id/btn_buy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Buy"
        android:textColor="@color/vert1"
        android:layout_margin="5dp"
        android:layout_weight="1"
        />

        <soup.neumorphism.NeumorphButton
            android:id="@+id/btn_sell"
            style="@style/Widget.Neumorph.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sell"
        android:layout_margin="5dp"
        android:textColor="@color/red1" />

    </LinearLayout>
    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:neumorph_shapeType="basin">
    <LinearLayout
        android:id="@+id/liste_crypto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neumorph_backgroundColor="@color/neuwhite"
            app:neumorph_shapeType="flat">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="7dp"
            android:layout_weight="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="BitCoin"
                android:layout_weight="4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="$19678.74"/>
        </LinearLayout>

        </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neumorph_backgroundColor="@color/neuwhite"
            app:neumorph_shapeType="flat">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="7dp"
            android:layout_weight="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Etherum"
                android:layout_weight="4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="$687.34"/>
        </LinearLayout>
        </soup.neumorphism.NeumorphCardView>
    </LinearLayout>
    </soup.neumorphism.NeumorphCardView>

</LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>